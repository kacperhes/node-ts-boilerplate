{
  "name": "node-ts-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for Node.js, Express.js, TypeScript server app",
  "main": "./src/app.ts",
  "repository": "git@github.com:kacperhes/node-ts-boilerplate.git",
  "author": "Kacper Hes",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register ./src/app.ts",
    "start": "node -r tsconfig-paths/register ./bin/app.js",
    "build": "tsc",
    "test:unit": "jest",
    "format": "prettier --write '**/*.{ts, js, html, css, scss, json}'",
    "lint": "tslint tslint.json 'src/**/*.ts'"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.2",
    "jest": "^27.3.1",
    "prettier": "2.4.1",
    "ts-jest": "^27.0.7",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.11.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "express": "^4.17.1"
  }
}
